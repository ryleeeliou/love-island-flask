{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build with clang++",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++14",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build C++ using clang++ instead of clang"
    }
  ]
}
